{% extends "session/layout.njk" %}

{% block content%}

<section class="login container form">
    <form action="/admin/forgot-password" method="POST">
        <div class="header">
            <h3>Esqueceu a Senha?</h3>
        </div>

        <div class="fields">
            <div class="item {% if error %} error {% endif %}">
                <div>Email</div>
                <div class="input">
                    <input 
                    type="email" 
                    name="email" 
                    placeholder="Digite seu email para recuperar a senha." 
                    >
                </div>
            </div>
        </div>

        <button class="button" type="submit">Recuperar Senha</button>

    </form>
</section>

{% endblock content %}