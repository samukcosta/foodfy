{% extends "session/layout.njk" %}

{% block content%}

<section class="login container form">
    <form action="/admin/password-reset" method="POST">
        <div class="header">
            <h3>Nova Senha</h3>
        </div>

        <div class="fields">
            {%include "session/fields.njk"%}

            <div class="item {% if error %} error {% endif %}">
                <div>Repita a Senha</div>
                <div class="input">
                    <input 
                    type="password" 
                    name="passwordRepeat" 
                    placeholder="Repita a senha senha" 
                    >
                </div>
            </div>
        </div>

        <button class="button" type="submit">Nova Senha</button>

        <input type="hidden" name="token" value="{{token}}">

    </form>
</section>

{% endblock content %}