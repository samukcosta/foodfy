{% extends "../layout.njk" %}

{% block content %}
    <form action="/admin/chefs" class="createChef" method="post">
        <div class="header">
            <h3>Criando chef</h3>
            <button type="submit">Salvar chef</button>
        </div>
        <p>Nome</p>
        <input type="text" name="name">
        <p>Avatar</p>
        <div id="add-img-avatar">
            <input 
                id="avatar_img" 
                type="file" 
                name="image" 
                multiple 
                accept="image/*" 
                
                onchange="ImgUpload.handleFileInput(event)"
            >
            <p>Enviar Avatar</p>
        </div>
    </form>
{% endblock content %}