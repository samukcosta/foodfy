{% extends "../layout.njk" %}

{% block content %}
    <form action="/admin/chefs" class="createChef" method="post" enctype="multipart/form-data">
        <div class="header">
            <h3>Criando chef</h3>
            <button type="submit">Salvar chef</button>
        </div>
        <p>Nome</p>
        <input type="text" name="name">
        <p>Avatar</p>
        <div id="container-img">
            <div id="add-img-avatar">
                <input 
                    id="avatar_img" 
                    type="file" 
                    name="image"  
                    accept="image/*" 
                    onchange="ImgChefUpload.handleFileInput(event)"
                >
                <p>Enviar Avatar</p>
            </div>
            <div id="img-avatar-preview">

            </div>
        </div>
    </form>
{% endblock content %}