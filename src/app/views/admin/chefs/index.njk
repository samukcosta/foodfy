{% extends "../layout.njk" %}

{% block content %}
<section>
    <div class="headerChefs">
        <h3>Gerenciar Receitas</h3>
        <a href="/admin/chefs/create" class="buttoncreate">Novo Chef</a>
    </div>

    <section class="chefs">
        {% for chef in chefs %}
        <div class="card_chefs">
            <img src="{{chef.avatar_url}}" alt="Imagem do/da chefe {{chef.name}}">
            <div>
                <p>{{chef.name}}</p>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </section>
</section>


{% endblock content %}

